server {
	listen 80;
	server_name {{ server_address }} {{ dev_server_address }};
	return 301 https://{{ server_address }}$request_uri;
}

server {
	listen 8080;
	listen 443 ssl;
	ssl_certificate  /etc/letsencrypt/live/{{ server_address }}/cert.pem;
	ssl_certificate_key /etc/letsencrypt/live/{{ server_address }}/privkey.pem;
	ssl_session_cache shared:SSL:20m;
	ssl_session_timeout 180m;
	ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
	ssl_prefer_server_ciphers on;
	ssl_ciphers ECDH+AESGCM:ECDH+AES256:ECDH+AES128:DH+3DES:!ADH:!AECDH:!MD5;

	add_header Strict-Transport-Security max-age=15768000;
	ssl_trusted_certificate /etc/letsencrypt/live/{{ server_address }}/chain.pem;
	resolver 8.8.8.8 8.8.4.4 valid=86400;
	resolver_timeout 10;

	ssl_stapling on;
	ssl_stapling_verify on;

	server_name  {{ server_address }} {{ dev_server_address }};
	root /var/www/html/public_html/;

	client_max_body_size 64M;

	# Deny access to any files with a .php extension in the uploads directory
	location ~* /(?:uploads|files)/.*\.php$ {
		deny all;
	}

	location / {
		index index.php index.html index.htm;
		try_files $uri $uri/ /index.php?$args;
	}

	location = /xmlrpc.php {
		deny all;
		access_log off;
		error_log off;
	}

	location ~* \.(?:ico|svg|css|js|gif|jpe?g|png)$ {
		expires 30d;
		add_header Pragma public;
		add_header Cache-Control "public";
	}

	location ~ \.php$ {
		try_files $uri =404;
		fastcgi_split_path_info ^(.+\.php)(/.+)$;
		fastcgi_index index.php;
		fastcgi_pass  unix:/var/run/php5-fpm.sock;
		fastcgi_param   SCRIPT_FILENAME $document_root$fastcgi_script_name;
		include       fastcgi_params;
	}
}
